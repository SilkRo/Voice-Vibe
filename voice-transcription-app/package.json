    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/user-event": "^14.4.3",
    "cross-env": "^7.0.3",
    "@next/bundle-analyzer": "^14.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1"
